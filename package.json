{
  "name": "cursorscript",
  "displayName": "CursorScript - Full IDE Support",
  "description": "Professional Language Server for CursorScript with IntelliSense, Formatting, Go to Definition, and Diagnostics.",
  "version": "1.1.1",
  "icon": "icon.png",
  "main": "./dist/extension.js",
  "publisher": "naveenpoddar",
  "repository": {
    "type": "git",
    "url": "https://github.com/naveenpoddar/cursorscript"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:cursor",
    "onFileSystem:*.cursor",
    "workspaceContains:**/*.cursor",
    "onStartupFinished"
  ],
  "scripts": {
    "bundle": "esbuild extension.js --bundle --outfile=dist/extension.js --external:vscode --platform=node && esbuild server.ts --bundle --outfile=dist/server.js --external:vscode --platform=node",
    "sync": "node extract_libraries.js && npm run bundle",
    "watch": "esbuild extension.js --bundle --outfile=dist/extension.js --external:vscode --platform=node --watch & esbuild server.ts --bundle --outfile=dist/server.js --external:vscode --platform=node --watch"
  },
  "contributes": {
    "commands": [
      {
        "command": "cursorScript.runFile",
        "title": "Run Cursor Script",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "cursorScript.runFile",
          "group": "navigation",
          "when": "resourceExtname == .cursor"
        }
      ]
    },
    "snippets": [
      {
        "language": "cursor",
        "path": "./snippets/cursor-snippets.json"
      }
    ],
    "languages": [
      {
        "id": "cursor",
        "aliases": [
          "CursorScript",
          "cursor"
        ],
        "extensions": [
          ".cursor"
        ],
        "icon": {
          "light": "./icons/cursorscript-icon-circled.png",
          "dark": "./icons/cursorscript-icon-circled.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cursor",
        "scopeName": "source.cursor",
        "path": "./syntaxes/cursor.tmLanguage.json"
      }
    ]
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.5",
    "child_process": "^1.0.2",
    "fs": "^0.0.1-security",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^25.3.1",
    "esbuild": "^0.27.3",
    "vscode": "^1.1.37"
  }
}
