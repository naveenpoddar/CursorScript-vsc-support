{
    "Function Template": {
        "prefix": "fn",
        "body": [
            "fn ${1:name}(${2:params}) {",
            "\t$0",
            "}"
        ],
        "description": "Create a new function"
    },
    "Async Function": {
        "prefix": "async",
        "body": [
            "async fn ${1:name}(${2:params}) {",
            "\t$0",
            "}"
        ],
        "description": "Create a new async function"
    },
    "Print Statement": {
        "prefix": "print",
        "body": [
            "print($1);$0"
        ],
        "description": "Log to console"
    },
    "Let Variable": {
        "prefix": "let",
        "body": [
            "let ${1:variable} = ${2:value};"
        ],
        "description": "Declare a mutable variable"
    },
    "Const Variable": {
        "prefix": "const",
        "body": [
            "const ${1:variable} = ${2:value};"
        ],
        "description": "Declare a constant variable"
    },
    "If Statement": {
        "prefix": "if",
        "body": [
            "if (${1:condition}) {",
            "\t$0",
            "}"
        ],
        "description": "If condition"
    },
    "If Else Statement": {
        "prefix": "ifelse",
        "body": [
            "if (${1:condition}) {",
            "\t$2",
            "} else {",
            "\t$0",
            "}"
        ],
        "description": "If-else condition"
    },
    "While Loop": {
        "prefix": "while",
        "body": [
            "while (${1:condition}) {",
            "\t$0",
            "}"
        ],
        "description": "While loop"
    },
    "Await Statement": {
        "prefix": "await",
        "body": [
            "const (${1:data}, ${2:error}) = await ${3:promise};$0"
        ],
        "description": "Await a promise with error handling"
    }
}