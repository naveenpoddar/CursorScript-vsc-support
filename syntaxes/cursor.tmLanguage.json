{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Cursor",
  "scopeName": "source.cursor",
  "patterns": [
    {
      "name": "comment.line.double-slash.cursor",
      "begin": "//",
      "end": "$",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.comment.cursor"
        }
      }
    },
    {
      "name": "string.quoted.double.cursor",
      "begin": "\"",
      "end": "(?<!\\\\)\"",
      "patterns": [
        {
          "name": "constant.character.escape.cursor",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "string.regexp.cursor",
      "begin": "r\"",
      "end": "(?<!\\\\)\"",
      "patterns": [
        {
          "name": "constant.character.escape.cursor",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "keyword.control.cursor",
      "match": "\\b(fn|let|const|return|if|else|while|for|import|export|from|async|await)\\b"
    },
    {
      "name": "entity.name.function.cursor",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
    },
    {
      "name": "variable.other.property.cursor",
      "comment": "Matches properties after a dot (e.g., person.address)",
      "match": "(?<=\\.)[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "entity.name.type.class.cursor",
      "comment": "Matches identifiers starting with an Uppercase letter",
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "constant.language.boolean.cursor",
      "match": "\\b(true|false)\\b"
    },
    {
      "name": "constant.language.null.cursor",
      "match": "\\bnull\\b"
    },
    {
      "name": "variable.other.readwrite.cursor",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "constant.numeric.cursor",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "name": "entity.name.function.arrow.cursor",
      "match": "->"
    },
    {
      "name": "keyword.operator.arithmetic.cursor",
      "match": "(\\+|\\-|\\*|/|=)"
    },
    {
      "name": "punctuation.terminator.cursor",
      "match": ";"
    },
    {
      "name": "punctuation.section.group.cursor",
      "comment": "Includes brackets for person[key] and the dot for person.address",
      "match": "(\\(|\\)|\\{|\\}|\\[|\\]|\\.)"
    }
  ]
}
